########## COMPILATION SETTINGS ####################################################################

CFLG=-O3 -Wall -std=gnu17
LIBS=-lm
CLEAN=rm -f *.out *.o *.a


########## PROGRAMS ################################################################################

00_mult3.o: 00_mult3.c # 3D wedge product test


########## ARCHIVES & GENERAL RULES ################################################################

# Compile rules
.c.o:
	gcc -c $(CFLG)  $<



########## PROGRAM & CLEAN RULES ###################################################################


##### Program Rules #######################################################

00_mult3: 00_mult3.o
	gcc $(CFLG) -o $@.out $^ $(LIBS)


##### Clean Rule ##########################################################

#  Clean
clean:
	$(CLEAN)